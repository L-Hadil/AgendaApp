<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AgendaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color for night mode -->
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color for night mode -->
        <item name="colorSecondary">@color/pink_200</item>
        <item name="colorSecondaryVariant">@color/pink_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors for dark mode -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/pink_700</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Text colors for better readability in dark mode -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/pink_200</item>

        <!-- Other customizations -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorForeground">@color/white</item>
    </style>
</resources>